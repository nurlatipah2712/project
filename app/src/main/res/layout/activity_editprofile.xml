<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:layout_height="match_parent"
    tools:context=".editprofileActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:src="@drawable/profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/text2"/>

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="85dp"
        android:src="@drawable/atas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:fontFamily="@font/fonttiga"
        android:textColor="@color/fiveColor"
        android:textSize="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="19dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_backspace"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>




    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontdua"
        android:text="Name"
        android:textColor="@color/fiveColor"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/Name2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Name"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontdua"
        android:text="Username"
        android:textColor="@color/fiveColor"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/Username2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Username"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontdua"
        android:text="Email"
        android:textColor="@color/fiveColor"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/email2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Email"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Update Profile"
        android:fontFamily="@font/fontdua"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/fiveColor"/>

</RelativeLayout>