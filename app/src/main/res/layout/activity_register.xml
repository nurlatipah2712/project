<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/img1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:text="Edukasi Kesehatan Mental"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/fontsatu"
        android:textSize="23sp"
        android:id="@+id/S_text1"/>
    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/S_text1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontsatu"
        android:text="Username"
        android:textColor="@color/fourColor"
        android:textSize="17dp"/>
    
    <EditText
        android:id="@+id/Username2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Username"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontdua"
        android:text="Password"
        android:textColor="@color/fourColor"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/Password2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Password"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Password"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/fontdua"
        android:text="Email"
        android:textColor="@color/fourColor"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/email2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:hint="Masukkan Password"
        android:paddingLeft="15dp"
        android:background="@drawable/kolominput"
        android:height="48dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Creat now"
        android:fontFamily="@font/fontdua"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/fourColor"/>


</RelativeLayout>